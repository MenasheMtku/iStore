<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFEEE"
    app:cardElevation="3dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/cName_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Name: " />

            <TextView
                android:id="@+id/customer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/cName_ID"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/cName_ID"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Customer Name"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/timeOfOreder_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_id"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Time: " />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/timeOfOreder_id"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/timeOfOreder_id"
                android:text="Time Ordered"
                android:textColor="@android:color/black"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/custAddressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeOfOreder_id"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Address: " />

            <TextView
                android:id="@+id/custAddressTv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/custAddressTv"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/custAddressTv"
                android:fontFamily="@font/roboto_slab_regular"
                android:maxLines="2"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/total_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/custAddressTv"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Total Items: " />

            <TextView
                android:id="@+id/totalItems_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/total_Tv"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/total_Tv"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Total Items"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="430dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="?android:attr/listDivider"
                android:layout_below="@+id/totalItems_ID"/>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>