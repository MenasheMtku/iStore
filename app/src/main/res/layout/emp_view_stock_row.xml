<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#C3F48A"
    app:cardElevation="3dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardImageEmp_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="2dp"
                android:src="@drawable/ic_outline_prod_image_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nameEmpCardTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/cardImageEmp_id"
                android:fontFamily="@font/roboto_slab_medium"
                android:maxLines="1"
                android:text="@string/prod_name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/descEmpCardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameEmpCardTv"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/cardImageEmp_id"
                android:fontFamily="@font/roboto_slab_regular"
                android:maxLength="30"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:text="Produc description Produc description"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/catNameEmpCardTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cardImageEmp_id"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/cardImageEmp_id"
                android:fontFamily="@font/roboto_slab_medium"
                android:maxLines="1"
                android:text="Category"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/qtyEmpCardTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_slab_medium"
                android:paddingRight="15sp"
                android:textSize="16sp"
                android:text="@string/product_quantity"
                android:textColor="@android:color/black" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>