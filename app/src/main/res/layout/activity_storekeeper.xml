<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee.Storekeeper">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/storeKeeperTb"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/store_k_toolbar_icon"
        app:title="@string/worker_name"
        app:titleMarginStart="35dp"
        app:titleTextColor="@color/black" />

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeKeeperTb"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tesxtGrid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storeKeeperTb"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_slab_black"
            android:text="DashBoard"
            android:gravity="center"
            android:textColor="@color/purple_500"
            android:textSize="32sp"
            android:padding="18sp"
            tools:ignore="NotSibling,UnknownId" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/mainGraid2_id"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <!-- Row 1 -->
        <!-- column 1  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/orderProd_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_slab_regular"
                    android:maxLines="2"
                    android:padding=".9dp"
                    android:paddingLeft="35dp"
                    android:text="New Product"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- column 2  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/expiredProd_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_slab_regular"
                    android:maxLines="2"
                    android:padding=".9dp"
                    android:text="View Items"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 2 -->
        <!-- column 1  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/customer_order_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/reportImage"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    android:src="@drawable/report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_slab_regular"
                    android:maxLines="2"
                    android:padding=".9dp"
                    android:text="Report"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>