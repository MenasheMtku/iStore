<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="6dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shopProdImageId"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:padding="2dp"
                android:rotation="90"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_add_cart_blue_24" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/shopProdNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:maxLines="1"
                android:padding="2dp"
                android:text="Product Name"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/shopProdDescId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopProdNameId"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Product Description"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/shopProdPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Costs"
                android:textColor="@android:color/black"
                android:textFontWeight="400" />

            <TextView
                android:id="@+id/shopAddToCartTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableStart="@drawable/ic_baseline_add_cart_blue_24"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="Add To Cart"
                android:textColor="@color/colorPrimaryDarkBlue" />


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>